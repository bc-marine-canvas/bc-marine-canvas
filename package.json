{
  "name": "bc-marine-canvas",
  "version": "1.0.0",
  "description": "BC Marine Canvas website",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbboynton/bc-marine-canvas.git"
  },
  "private": true,
  "browserslist": "defaults",
  "scripts": {
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint assets/scripts --ext .js",
    "lint:styles": "stylelint assets/styles/**/*.scss",
    "start": "npm run start:bind",
    "start:bind": "HUGO_BIND_TO_IP=true bin/dev",
    "start:serverless": "HUGO_SERVERLESS=true bin/dev",
    "deploy": "npm run lint && bin/prod"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "5.0.0",
    "autoprefixer": "10.4.13",
    "eslint": "8.28.0",
    "postcss": "8.4.18",
    "postcss-cli": "10.0.0",
    "sass": "1.55.0",
    "stylelint": "14.14.0",
    "stylelint-config-standard-scss": "6.0.0",
    "stylelint-scss": "4.3.0"
  },
  "dependencies": {
    "@popperjs/core": "2.11.6",
    "bootstrap": "5.2.2",
    "node-fetch": "3.2.10",
    "sanitize-html": "2.7.3"
  }
}
